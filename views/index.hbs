{{> head title="Agenda"}}

	<div class="max-w-full h-screen sm:flex">
	
		<div class="w-full sm:w-1/2 bg-gray-800">
			<div class="h-full font-sans antialiased bg-grey-lightest flex items-center flex-wrap relative">
				<div class="relative sm:absolute top-0 left-0 right-0 pt-6 pb-6 sm:pb-0 sm:pt-24 text-center m-auto text sm:text-2xl w-3/4 font-semibold">
					Contacts book CRUD with Node,Handlebars template, Express, MongoDb, Mongoose, Tailwind css and JWT
				</div>
				<!-- Content -->
				<div class="w-full bg-grey-lightest mb-12 flex justify-center flex-wrap">
					<div class="w-full text-3xl text-center pb-6">Register for a free account</div>
					<a href="/register" class="text-xs block m-auto bg-transparent text-center hover:bg-blue-600 text-blue-600 hover:text-white py-2 px-4 border border-blue-700 hover:border-transparent rounded">
						Register
					</a>
				</div>
			</div>
		</div>

		{{!-- 1/2 --}}
		<div class="w-full sm:w-1/2 bg-gray-100">
			<div class="sm:w-full w-full h-full max-w-xs flex mx-auto flex-wrap items-center">
				<div class="mx-auto mb-12">
					<h1 class="text-3xl text-center pb-6">Login</h1>

					<form action="/" method="post" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
						<div class="mb-4">
							<label class="block text-gray-700 text-sm font-bold mb-2" for="email">
								Email
							</label>
							<input  id="email" type="text" name="email" placeholder="Email" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
						</div>

						<div class="mb-6">
							<label class="block text-gray-700 text-sm font-bold mb-2" for="password">
								Password
							</label>
							<input id="password" type="password" name="password" placeholder="******************" class="shadow appearance-none border border-red-500 rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" >
							<p id="errorText" class="text-red-500 text-xs italic">Please choose a password.</p>
						</div>

						<div class="flex items-center justify-between">
							<button id="login" class="text-xs block m-auto bg-transparent text-center hover:bg-green-600 text-green-600 hover:text-white py-2 px-4 border border-green-700 hover:border-transparent rounded" type="submit">
								Sign In
							</button>
							<a href="/forgot" class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800 ml-5" >
								Forgot Password?
							</a>
						</div>
					</form>

					<p class="text-center text-gray-500 text-xs">
						&copy;2020 Luj√°n Corp. All rights reserved.
					</p>
				</div>
					
			</div>
		</div>
	</div>

	<script type="text/javascript" src="/js/login.js"></script>

</body>
</html>